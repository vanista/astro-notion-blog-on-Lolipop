---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
  class?: string
}

const { post, class: className } = Astro.props
---

{post.Excerpt && (
  <div class:list={["post-excerpt", className]}>
    <p>{post.Excerpt}</p>
  </div>
)}

<style>
  .post-excerpt {
    position: relative;
    width: fit-content;
    max-width: 100%;
    margin-top: 1.5em;
    padding: 1em;
    background-color: var(--bg);
    border-radius: 8px;
    font-size: 0.9rem;
    color: var(--fg);
    box-sizing: border-box;
  }

  .post-excerpt::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 1em;
    transform: none;
    border-width: 0 10px 10px 10px;
    border-style: solid;
    border-color: transparent transparent var(--bg) transparent;
  }

  .post-excerpt p {
    margin: 0;
    color: var(--fg);
  }

  /* トップページ用のスリムなスタイル */
  .post-excerpt.index-excerpt {
    padding-top: 0.5em;
    padding-bottom: 0.5em;
  }
</style>
